    <!-- cowl flap control -->
    <animation>
        <type>knob</type>
        <object-name>cowlcontrol</object-name>
        <property>controls/engines/engine/cowl-flaps-norm</property>
        <factor>45</factor>
        <drag-direction>vertical</drag-direction>

        <axis>
            <x1-m>1.98866</x1-m>
            <y1-m>-.1550757</y1-m>
            <z1-m>.0258475</z1-m>

            <x2-m>1.98866</x2-m>
            <y2-m>-.1383937</y2-m>
            <z2-m>.0258475</z2-m>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/cowl-flaps-norm</property>
                <factor>.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    
    <!-- Yoke transparency -->
    <animation>
        <type>select</type>
        <object-name>yoke</object-name>
        <object-name>yokearm</object-name>
        <object-name>yokeholder</object-name>
        <object-name>yokerod</object-name>
        <object-name>yokerodlabel</object-name>
        <object-name>yokesleeve</object-name>
        <condition>
            <greater-than>
                <property>sim/model/yokes-alpha</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>yokeport</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>sim/model/yokes-alpha</property>
            </binding>
        </action>
    </animation>

