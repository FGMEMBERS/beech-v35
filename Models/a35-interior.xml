                    <property>controls/pianobuttons/gear</property>
                    <value type="string">0</value>
                </binding>
            </mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/gear/gear-down</property>
                <value type="bool">true</value>
            </binding>
        </action>
    </animation>


