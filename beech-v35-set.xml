<?xml version="1.0"?>
<PropertyList>
    <sim>
        <description>Beech V35 Bonanza</description>
        <aircraft-version>0.0.1</aircraft-version>
        <author>flyingfisch</author>
        <status>beta</status>
        <rating>
            <FDM type="int">2</FDM>
            <systems type="int">1</systems>
            <cockpit type="int">4</cockpit>
            <model type="int">4</model>
        </rating>

        <flight-model>yasim</flight-model>
        <aero>beech-v35</aero>

        <!-- x/y/z == right/up/back -->
        <view n="0">
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y">-.279348</x-offset-m> 
                <y-offset-m archive="y">.495983</y-offset-m>   
                <z-offset-m archive="y">2.4466</z-offset-m>   
                <pitch-offset-deg>-15</pitch-offset-deg>
            </config>
        </view>

        <view n="1">
            <config>
                <target-z-offset-m archive="y" type="double">2.75</target-z-offset-m>
            </config>
        </view>

        <view n="2">
            <config>
                <target-z-offset-m archive="y" type="double">2.75</target-z-offset-m>
            </config>
        </view>

        <view n="5">
            <config>
                <target-z-offset-m archive="y" type="double">2.75</target-z-offset-m>
            </config>
        </view>

        <view n="6">
            <config>
                <target-z-offset-m archive="y" type="double">2.75</target-z-offset-m>
            </config>
        </view>

        <view n="103">
            <name>Co-Pilot View</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
                <default-pitch-deg type="double">0</default-pitch-deg>
                <default-heading-deg type="double">0</default-heading-deg>
                <front-direction-deg type="double">0</front-direction-deg>
                <front-left-direction-deg type="double">45</front-left-direction-deg>
                <left-direction-deg type="double">90</left-direction-deg>
                <back-left-direction-deg type="double">135</back-left-direction-deg>
                <back-direction-deg type="double">180</back-direction-deg>
                <back-right-direction-deg type="double">225</back-right-direction-deg>
                <right-direction-deg type="double">270</right-direction-deg>
                <front-right-direction-deg type="double">315</front-right-direction-deg>
                <x-offset-m archive="y">.279348</x-offset-m> 
                <y-offset-m archive="y">.495983</y-offset-m>   
                <z-offset-m archive="y">2.4566</z-offset-m>   
                <pitch-offset-deg>-10</pitch-offset-deg>
                <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
            </config>
        </view>

        <view n="100">
            <name>Back Seat (right)</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
                <default-pitch-deg type="double">0</default-pitch-deg>
                <default-heading-deg type="double">0</default-heading-deg>
                <front-direction-deg type="double">0</front-direction-deg>
                <front-left-direction-deg type="double">45</front-left-direction-deg>
                <left-direction-deg type="double">90</left-direction-deg>
                <back-left-direction-deg type="double">135</back-left-direction-deg>
                <back-direction-deg type="double">180</back-direction-deg>
                <back-right-direction-deg type="double">225</back-right-direction-deg>
                <right-direction-deg type="double">270</right-direction-deg>
                <front-right-direction-deg type="double">315</front-right-direction-deg>
                <x-offset-m archive="y">.279348</x-offset-m> 
                <y-offset-m archive="y">.495983</y-offset-m>   
                <z-offset-m archive="y">3.31</z-offset-m>   
                <pitch-offset-deg>-10</pitch-offset-deg>
                <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
            </config>
        </view>

        <view n="102">
            <name>Back Seat (left)</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
                <default-pitch-deg type="double">0</default-pitch-deg>
                <default-heading-deg type="double">0</default-heading-deg>
                <front-direction-deg type="double">0</front-direction-deg>
                <front-left-direction-deg type="double">45</front-left-direction-deg>
                <left-direction-deg type="double">90</left-direction-deg>
                <back-left-direction-deg type="double">135</back-left-direction-deg>
                <back-direction-deg type="double">180</back-direction-deg>
                <back-right-direction-deg type="double">225</back-right-direction-deg>
                <right-direction-deg type="double">270</right-direction-deg>
                <front-right-direction-deg type="double">315</front-right-direction-deg>
                <x-offset-m archive="y">-.279348</x-offset-m> 
                <y-offset-m archive="y">.495983</y-offset-m>   
                <z-offset-m archive="y">3.31</z-offset-m>   
                <pitch-offset-deg>-10</pitch-offset-deg>
                <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
            </config>
        </view>

        <!--<startup>
        <splash-texture>Aircraft/pa28-236/Splashes/splash.png</splash-texture>
        <splash-title>Beech V35 Bonanza</splash-title>
        </startup>-->

        <model>
            <path>Aircraft/beech-v35/Models/beech-v35.xml</path>
            <yokes-alpha type="double">1</yokes-alpha>
        </model>

        <!-- For now, use the Cessna 172 sound configuration (same engine) -->
        <sound>
            <path archive="y">Aircraft/pa24-250/pa24-250-sound.xml</path>
        </sound>

        <!--autopilot>
        <path></path>
        </autopilot-->

        <!--<flaps>
        <setting>0.00</setting>
        <setting>0.5</setting>
        <setting>1.00</setting>
        </flaps>-->

        <!-- Menubar -->
        <!--<menubar include="Dialogs/pa28-236-menu.xml" />-->

        <!-- Weights -->
        <weight n="0">
            <name>Pilot</name>
            <weight-lb>170</weight-lb>
            <max-lb>300</max-lb>
        </weight>
        <weight n="1">
            <name>Copilot</name>
            <weight-lb>0</weight-lb>
            <max-lb>300</max-lb>
        </weight>
        <weight n="2">
            <name>Left Passenger</name>
            <weight-lb>0</weight-lb>
            <max-lb>300</max-lb>
        </weight>
        <weight n="3">
            <name>Right Passenger</name>
            <weight-lb>0</weight-lb>
            <max-lb>300</max-lb>
        </weight>
        <weight n="4">
            <name>Baggage</name>
            <weight-lb type="int">100</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <systems>
            <autopilot>
              <name>autopilot helpers</name>
              <path>Aircraft/Generic/generic-autopilot-helper.xml</path>
            </autopilot>
            <autopilot>
              <name>FiltersOnly</name>
              <path>Aircraft/beech-v35/Systems/NAVandGSfilters.xml</path>
            </autopilot>
            <autopilot>
                <name>APMode</name>
                <path>Aircraft/Instruments-3d/Century-III/AutopilotMode.xml</path>
            </autopilot>
            <autopilot>
                <name>APModePanel</name>
                <path>Aircraft/Instruments-3d/Century-III/AutopilotModePanel.xml</path>
            </autopilot>
            <autopilot>
                <name>APConfig</name>
                <path>Aircraft/beech-v35/Systems/CENTURYIII.xml</path>
            </autopilot>
        </systems>

        <!-- Menu -->
        <menubar>
            <default>
                <menu n="100">
                    <label>Beech 35</label>
                    <enabled type="bool">true</enabled>
                    <item>
                        <label>Select Livery</label>
                        <binding>
                            <command>nasal</command>
                            <script>aircraft.livery.dialog.open()</script>
                        </binding>
                    </item>
                </menu>
            </default>
        </menubar>
        <help>    
          <title>                        Beech Bonanza V-35</title>
          <line></line>
          <line>           V Never Exceed: 225kt       V Max Manouver: 152kt</line>
          <line>     V Max Flaps Extended: 130kt  V Max Gear Extended: 160kt</line>
          <line>Stall Speed  Flaps+Gear Up: 58kt        Flaps+Gear Dn: 52kt </line>
          <line> </line>
          <line>TakeOff ~60kt </line>
          <line>  Nose steering is more sensitive at low speed: line up early</line>
          <line>  V-Tail rudder inputs will cause exaggerated roll input  </line>
          <line>  Allowing wing liftoff with nosewheel in contact will cause uncontrolled yaw</line>
          <line>  Elevator trim: -0.2 (nose-up) is added in -set file for normal takeoff     </line>
          <line></line>
          <line>  Flaps: 0  Throttle: Max  RPM: Max (2700rpm) </line>
          <line>  At 50kt IAS: Pull stick slowly back to raise nose </line>
          <line>  At 60kt IAS: Pull stick fully  back to rotate     </line>
          <line></line>
          <line>Climb-Out 80kt </line>
          <line>  Reduce RPM to 2500, Keep VS below 250fpm until 80kt IAS is reached</line>
          <line>  Adjust trim after >= 80kt IAS is attained  </line>
          <line></line>
          <line>Approach Vapp = 75kt </line>
          <line>  Approach throttle/RPM: 15/2000, Flap1, Gear (Use flaps 2, 3 for Descent Only)</line>
          <line>  At throttle / RPM Min (15psi / 2000rpm) Flap 0: Level flight maintains 120kt </line>
          <line>  At throttle / RPM Min (15psi / 2000rpm) Flap 1: Level flight maintains  80kt </line>
          <line>  At throttle / RPM Min With Gear Down    Flap 1: Level flight Leads to Stall  </line>
          <line>  Any throttle, RPM               Flap 2, Flap 3: Level flight Leads to Stall  </line>
          <line>  Speed rapidly increases descending with Flaps 0: Prepare for approach early</line>
          <line>  Speed rapidly decreases with Flaps 2,3: Be ready to retract and apply power</line>
          <line></line>
          <line>Roll Out </line>
          <line>  Keep nose wheel elevated with elevator and steer with rudder until speed decays </line>
          <line>  Apply brakes sparingly in bursts, extended braking will cause nose to collapse  </line>
          <line></line>
        </help>    
    </sim>

    <model>
        <path>Aircraft/beech-v35/Models/beech-v35.xml</path>
        <livery>
            <file type="string"/>
        </livery>
    </model>
 
    <controls>
      <flight>
        <elevator-trim type="double">-0.2</elevator-trim>
      </flight>
    </controls>

    <!-- Incorporate Century-III AP -->
    <nasal>
        <v35>
            <file>Aircraft/beech-v35/Nasal/action-sim.nas</file>
            <file>Aircraft/beech-v35/Nasal/livery.nas</file>
        </v35>
        <century3>
            <file>Aircraft/beech-v35/Nasal/century3.nas</file>
        </century3>
    </nasal>
    
